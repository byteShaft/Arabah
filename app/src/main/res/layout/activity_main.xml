<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="byteshaft.com.arabah.MainActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/owner_button"
            android:layout_below="@+id/user_button"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="I'm a FoodTruck"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/button_bacground"
            android:layout_width="230dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/login_textview"
            android:layout_below="@+id/owner_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#EA75BB"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:text="Already have account?Login"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/user_button"
            android:textColor="#FFF"
            android:text="I'm a User"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/button_bacground"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>
